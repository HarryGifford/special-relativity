{
  "private": true,
  "name": "hg-special-relativity",
  "version": "1.0.0",
  "description": "WebGL demo to View effects of special relativity such as Terrell rotation, relativistic beaming and Doppler shift.",
  "main": "dist/index.js",
  "scripts": {
    "build": "webpack",
    "build:prod": "NODE_ENV=production webpack",
    "build:dev": "NODE_ENV=development webpack",
    "build:profile": "NODE_ENV=production webpack --profile --json > stats.json",
    "clean": "rimraf dist",
    "start": "webpack serve",
    "preinstall": "npx only-allow pnpm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HarryGifford/special-relativity"
  },
  "keywords": [
    "special relativity",
    "terrell rotation",
    "relativistic effects",
    "doppler",
    "glsl"
  ],
  "author": "Harry Gifford <harry@gifford.eu>",
  "license": "MIT",
  "dependencies": {
    "@babylonjs/core": "^5.21.0",
    "@babylonjs/loaders": "^5.21.0",
    "babylonjs-gltf2interface": "^5.21.0"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^11.0.0",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.3.1",
    "typescript": "^4.8.2",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.10.1"
  }
}
