{
  "private": true,
  "name": "hg-special-relativity",
  "author": "Harry Gifford <harry@gifford.eu>",
  "license": "MIT",
  "version": "1.0.0",
  "description": "WebGL demo to View effects of special relativity such as Terrell rotation, relativistic beaming and Doppler shift.",
  "keywords": [
    "special relativity",
    "terrell rotation",
    "relativistic effects",
    "doppler",
    "glsl"
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "webpack",
    "build:prod": "NODE_ENV=production webpack",
    "build:dev": "NODE_ENV=development webpack",
    "build:profile": "NODE_ENV=production webpack --profile --json > stats.json",
    "clean": "rimraf dist",
    "start": "webpack serve",
    "preinstall": "npx --yes only-allow pnpm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HarryGifford/special-relativity"
  },
  "bugs": {
    "url": "https://github.com/HarryGifford/special-relativity/issues"
  },
  "engines": {
    "pnpm": ">=7.24.2"
  },
  "packageManager": "pnpm@7.27.1",
  "dependencies": {
    "@babylonjs/core": "^7.1.0",
    "@babylonjs/loaders": "^7.1.0",
    "babylonjs-gltf2interface": "^7.1.0"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^12.0.2",
    "rimraf": "^5.0.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  }
}
